<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/sign_jump_bar"
    android:layout_width="match_parent"
    android:layout_height="45dp">
   <ImageView
       android:id="@+id/image_view_back"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:layout_centerVertical="true"
       android:src="@drawable/topbanner_white_arrow"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签 到"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="厨币记录"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:clickable="true"/>
</RelativeLayout>
<ScrollView
    android:id="@+id/sign_scrollview"
    android:layout_below="@id/sign_jump_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <RelativeLayout
          android:id="@+id/sign_above_relative"
          android:layout_width="match_parent"
          android:layout_height="360dp"
          android:background="@drawable/sign_bg">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="如何赚厨币？"
              android:textColor="#ffffff"
              android:textSize="16sp"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"
              android:padding="4dp"
              android:background="@drawable/sign_jump_tv_bg"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="提醒已关闭"
             android:textColor="#ffffff"
             android:textSize="16sp"
             android:layout_alignParentRight="true"
             android:layout_marginTop="10dp"
             android:layout_marginRight="70dp"
             android:padding="4dp"
             />
          <ImageView
              android:layout_width="40dp"
              android:layout_height="20dp"
              android:src="@drawable/notify_off"
              android:scaleType="fitXY"
              android:layout_alignParentRight="true"
              android:layout_marginTop="17dp"
              android:layout_marginRight="20dp"
              />
          <ImageView
              android:id="@+id/sign_image_mark"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/mark_bg"
              android:scaleType="fitXY"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="50dp"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="签到"
              android:textColor="#ffffff"
              android:textSize="18sp"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="75dp"
              />
          <TextView
              android:id="@+id/sign_seven_day_content"
              android:layout_below="@id/sign_image_mark"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="15dp"
              android:textSize="15sp"
              android:textColor="#d3d3d3"
              android:text="连续签到七天就有惊喜哦~"/>
          <TextView
              android:id="@+id/sign_icon_count_tv"
              android:layout_below="@id/sign_seven_day_content"
              android:layout_marginTop="10dp"
              android:layout_centerHorizontal="true"
              android:drawableLeft="@drawable/sign_icon_count"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="  0"
              android:textColor="#ffffff"
              android:textSize="26sp"
              android:textStyle="bold"/>
          <LinearLayout
              android:layout_below="@id/sign_icon_count_tv"
              android:layout_marginTop="20dp"
              android:layout_centerHorizontal="true"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

          <LinearLayout
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center">
              <TextView
                  android:id="@+id/text_view_sign_one"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="07.14"
                  android:textSize="10sp"
                  android:textColor="#ffffff"
                  android:layout_margin="10dp"/>
              <ImageView

                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:src="@drawable/bool_sign_no"
                  android:scaleType="fitXY"
                  android:layout_margin="10dp"/>
              <TextView
                  android:id="@+id/text_view_sign_one_below"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="50"
                  android:textSize="11sp"
                  android:textColor="#ffffff"
                  android:layout_margin="10dp"
                  />
          </LinearLayout>
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center">
                  <TextView
                      android:id="@+id/text_view_sign_two"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="今天"
                      android:textSize="10sp"
                      android:textColor="#ffffff"
                      android:layout_margin="10dp"/>
                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:src="@drawable/coin_today"
                      android:scaleType="fitXY"
                      android:layout_margin="10dp"/>
                  <TextView
                      android:id="@+id/text_view_sign_two_below"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="50"
                      android:textSize="11sp"
                      android:textColor="#ffffff"
                      android:layout_margin="10dp"
                      />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center">
                  <TextView
                      android:id="@+id/text_view_sign_three"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="明天"
                      android:textSize="10sp"
                      android:textColor="#ffffff"
                      android:layout_margin="10dp"/>
                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:src="@drawable/coin_future"
                      android:scaleType="fitXY"
                      android:layout_margin="10dp"/>
                  <TextView
                      android:id="@+id/text_view_sign_three_below"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="50"
                      android:textSize="11sp"
                      android:textColor="#ffffff"
                      android:layout_margin="10dp"
                      />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center">
                  <TextView
                      android:id="@+id/text_view_sign_four"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="07.14"
                      android:textSize="10sp"
                      android:textColor="#ffffff"
                      android:layout_margin="10dp"/>
                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:src="@drawable/coin_future"
                      android:scaleType="fitXY"
                      android:layout_margin="10dp"/>
                  <TextView
                      android:id="@+id/text_view_sign_four_below"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="50"
                      android:textSize="11sp"
                      android:textColor="#ffffff"
                      android:layout_margin="10dp"
                      />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center">
                  <TextView
                      android:id="@+id/text_view_sign_five"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="07.14"
                      android:textSize="10sp"
                      android:textColor="#ffffff"
                      android:layout_margin="10dp"/>
                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:src="@drawable/coin_future"
                      android:scaleType="fitXY"
                      android:layout_margin="10dp"/>
                  <TextView
                      android:id="@+id/text_view_sign_five_below"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="50"
                      android:textSize="11sp"
                      android:textColor="#ffffff"
                      android:layout_margin="10dp"
                      />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center">
                  <TextView
                      android:id="@+id/text_view_sign_six"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="07.14"
                      android:textSize="10sp"
                      android:textColor="#ffffff"
                      android:layout_margin="10dp"/>
                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:src="@drawable/coin_future"
                      android:scaleType="fitXY"
                      android:layout_margin="10dp"/>
                  <TextView
                      android:id="@+id/text_view_sign_six_below"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="50"
                      android:textSize="11sp"
                      android:textColor="#ffffff"
                      android:layout_margin="10dp"
                      />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center">
                  <TextView
                      android:id="@+id/text_view_sign_seven"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="07.14"
                      android:textSize="10sp"
                      android:textColor="#ffffff"
                      android:layout_margin="10dp"/>
                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:src="@drawable/coin_future"
                      android:scaleType="fitXY"
                      android:layout_margin="10dp"/>
                  <TextView
                      android:id="@+id/text_view_sign_seven_below"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="50"
                      android:textSize="11sp"
                      android:textColor="#ffffff"
                      android:layout_margin="10dp"
                      />
              </LinearLayout>

          </LinearLayout>

      </RelativeLayout>
        <ImageView
            android:id="@+id/sign_bi_lang_bian"
            android:layout_width="match_parent"
            android:layout_below="@id/sign_above_relative"
            android:layout_height="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/bilangbian"/>

      <com.bigkoo.convenientbanner.ConvenientBanner
          android:id="@+id/sign_banner"
          android:layout_below="@id/sign_bi_lang_bian"
          android:layout_width="match_parent"
          android:layout_marginTop="6dp"
          android:layout_marginLeft="3dp"
          android:layout_marginRight="3dp"
          android:layout_height="180dp">
      </com.bigkoo.convenientbanner.ConvenientBanner>

      <TextView
          android:id="@+id/tv_title_sign"
          android:layout_below="@id/sign_banner"
          android:layout_marginTop="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="————————· 今日厨抢购 ·————————"
          android:layout_centerHorizontal="true"/>
        
      <WebView
          android:id="@+id/sign_webview_last"
          android:layout_below="@id/tv_title_sign"
          android:layout_width="match_parent"
          android:layout_height="350dp"
          android:keepScreenOn="true"
          android:scrollbars="none"

         >

      </WebView>






    </RelativeLayout>

</ScrollView>

</RelativeLayout>
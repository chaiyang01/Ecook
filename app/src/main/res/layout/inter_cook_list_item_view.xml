<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >
<ImageView
    android:id="@+id/internet_cook_list_view_item_image"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:src="@mipmap/ic_launcher"
    android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/video_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/home_recipe_play"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_marginTop="160dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/author_image_view"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@mipmap/ic_launcher"/>
<TextView
    android:id="@+id/author_name_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:singleLine="true"
    android:text="小芳"
    android:textSize="12sp"
    android:gravity="center"/>
    </LinearLayout>
<TextView
    android:id="@+id/cook_name_title"
    android:layout_below="@id/internet_cook_list_view_item_image"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_width="200dp"
    android:textSize="16sp"
    android:singleLine="true"
    android:textColor="#000000"
    android:layout_height="wrap_content"
    android:text="haha"
    />
<TextView
    android:id="@+id/cook_info"
    android:layout_below="@id/cook_name_title"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_width="250dp"
    android:textSize="12sp"
    android:layout_height="wrap_content"
    android:maxLines="2"
    android:ellipsize="end"
    android:text="jjjjjjjjjjj"/>
    
<TextView
    android:id="@+id/people_likes"
    android:layout_below="@id/cook_info"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="hahaha"
    android:textSize="12sp"
    />
</RelativeLayout>
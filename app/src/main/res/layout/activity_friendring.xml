<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/topbanner_white_arrow"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/topbanner_white_share"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lucencys"
        />
    <RelativeLayout
        android:id="@+id/rl_two_friendring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_userpic_friendring"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sign_bg"
            />
        <TextView
            android:id="@+id/tv_username_friendring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ssss"
            android:layout_toRightOf="@id/riv_userpic_friendring"
            android:layout_marginLeft="15dp"
            />
        <RelativeLayout
            android:id="@+id/rl_three_friendring"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/riv_userpic_friendring"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/tv_time_talk_friendring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="说"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            />
            <TextView
                android:id="@+id/tv_time_friendring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17小时前"
                android:layout_marginRight="5dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/riv_userpic_friendring"
            android:layout_below="@id/rl_three_friendring"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/tv_news_friendring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="说"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/tv_news_detail_friendring"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@id/tv_news_detail_friendring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#新人报道#"
                android:layout_marginRight="5dp"
                android:textColor="@color/blue"
                />

        </RelativeLayout>
    </RelativeLayout>

    <!--recycler图片信息-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_pic_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        />

        <TextView
            android:id="@+id/tv_zan_friendring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="32"
            android:gravity="right|center"
            android:drawableRight="@drawable/topbanner_white_zan"
            android:layout_marginRight="15dp"
            />
        <!--点赞用户信息-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lucencyss"
            >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_zanuser_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            />
        </RelativeLayout>
<RelativeLayout
    android:id="@+id/rl_comment_friend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    >
    <TextView
        android:id="@+id/tv_bg_friend"
        android:layout_width="5dp"
        android:layout_height="20dp"
        android:background="@color/yellows"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ddd"
        android:layout_toRightOf="@id/tv_bg_friend"
        android:layout_marginLeft="5dp"
        />

</RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<android.support.v7.widget.RecyclerView
    android:id="@+id/rlv_comment_friengring"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    />
        </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <TextView
        android:id="@+id/tv_input_comment_friendring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送"
        android:textColor="@color/yellows"
        android:layout_below="@id/tv_bg_line_in"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/et_put_comment_friendring"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@id/tv_input_comment_friendring"
        android:layout_below="@id/tv_bg_line_in"
        android:background="@drawable/edit_bg_input_comment"
        android:hint="   输入想说的话"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
</RelativeLayout>
    </LinearLayout>
</ScrollView>
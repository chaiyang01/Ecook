<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/cookbook_ten">
    <ImageView
        android:layout_width="@dimen/cookbook_one_five_zero"
        android:layout_height="@dimen/cookbook_one_zero_zero"
        android:scaleType="centerCrop"
        android:id="@+id/coll_iv" />
    <ImageView
        android:layout_width="@dimen/cookbook_one_five_zero"
        android:layout_height="wrap_content"
        android:background="@drawable/recepe_mask_class"
        android:layout_alignBottom="@+id/coll_iv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/coll_tv"
        style="@style/one_width_height_warp"
        android:text="甜品"
        android:textColor="@color/white"
        android:paddingBottom="@dimen/cookbook_fifteen_sp"
        android:layout_alignBottom="@+id/coll_iv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
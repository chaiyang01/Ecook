<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cool.ecook.activity.LogingPutPasswordActivity">
    <RelativeLayout
        android:id="@+id/rl_one_putpassword"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_verify_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/topbanner_white_arrow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号登录"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_numphone"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="手机号"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_below="@id/rl_one_putpassword"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        />
    <EditText
        android:id="@+id/et_num"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/tv_numphone"
       android:layout_alignBaseline="@id/tv_numphone"
        android:layout_marginLeft="30dp"
        />
    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@drawable/dotted_line"
        android:layout_below="@id/et_num"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <TextView
        android:id="@+id/tv_numphone_pass"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="密码"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_below="@id/line"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        />
    <EditText
        android:id="@+id/et_num_pass"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/tv_numphone_pass"
        android:layout_alignBaseline="@id/tv_numphone_pass"
        android:layout_marginLeft="50dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/et_num_pass"
        android:background="#FFD700"
        android:text="登录"
        android:textColor="#ffffff"
        android:id="@+id/button" />
</RelativeLayout>

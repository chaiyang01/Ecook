<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/cookbook_one_one_zero"
        android:layout_height="@dimen/cookbook_one_one_zero"
        android:layout_marginLeft="@dimen/cookbook_five"
        android:layout_marginRight="@dimen/cookbook_five"
        app:cardCornerRadius="@dimen/cookbook_fifteen">

        <RelativeLayout
            style="@style/all_width_height_match">

            <ImageView
                android:id="@+id/iv_cookbook_grid_item"
                style="@style/all_width_height_match"
                android:scaleType="centerCrop"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/cookbook_thirty"
                android:layout_alignBottom="@id/iv_cookbook_grid_item"
                android:background="@color/lucency" />

            <TextView
                android:id="@+id/tv_cookbook_grid_item_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cookbook_thirty"
                android:layout_alignBottom="@id/iv_cookbook_grid_item"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/cookbook_fifteen" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
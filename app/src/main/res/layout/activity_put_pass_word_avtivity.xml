<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cool.ecook.activity.PutPassWordAvtivity">
    <RelativeLayout
        android:id="@+id/rl_one_verify"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_passwork_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/topbanner_white_arrow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入密码(3/4)"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lin_one_password"
        android:layout_width="match_parent"
        android:layout_below="@id/rl_one_verify"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/tv_verify"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="设置密码"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        />
    <EditText
        android:id="@+id/et_one_password"
        android:layout_width="0dp"
        android:inputType="textPassword"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:hint="输入6 - 12位密码"
        android:layout_alignBaseline="@id/tv_verify"
        android:layout_toRightOf="@id/tv_verify"
        />
        <CheckBox
            android:id="@+id/iv_eys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/esye_on_off"
            android:layout_marginRight="15dp"
            android:button="@null"
            android:layout_gravity="center"
            android:background="@null"
            />
    </LinearLayout>
    <Button
        android:id="@+id/but_step_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFD700"
        android:text="最后一步"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="15dp"
        android:layout_below="@+id/lin_one_password"
        />

</RelativeLayout>

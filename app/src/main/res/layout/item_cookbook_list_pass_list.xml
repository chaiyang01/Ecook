<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/all_width_height_match"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cookbook_one_three_zero"
        android:layout_centerInParent="true"
        >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_cookbook_list_pass"
        android:layout_width="@dimen/cookbook_one_two_zero"
        android:layout_height="@dimen/cookbook_one_zero_zero"
        android:layout_marginLeft="@dimen/cookbook_fifteen"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/cookbook_ten"
        />


    <TextView
        android:id="@+id/tv_cookbook_list_psaa_name"
        style="@style/all_width_height_warp"
        android:layout_marginTop="@dimen/cookbook_fifteen"
        android:layout_marginLeft="@dimen/cookbook_ten"
        android:text="sss"
        android:layout_toRightOf="@id/iv_cookbook_list_pass"
        android:textSize="@dimen/cookbook_twenty_sp"
        android:singleLine="true"
        />



        <TextView
            android:id="@+id/tv_cookbook_list_pass_description"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="@dimen/cookbook_ten"
            android:layout_toRightOf="@id/iv_cookbook_list_pass"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_below="@id/tv_cookbook_list_psaa_name"
            android:text="ddd"
            android:textSize="@dimen/cookbook_fifteen_sp" />
    <TextView
        android:id="@+id/tv_cookbook_list_psaa_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_cookbook_list_pass"
        android:layout_marginBottom="@dimen/cookbook_five"
        android:layout_marginLeft="@dimen/cookbook_ten"
        android:text="sss"
        android:background="@color/white"
        android:layout_toRightOf="@id/iv_cookbook_list_pass"
        android:textSize="@dimen/cookbook_fifteen_sp" />


    </RelativeLayout>
</RelativeLayout>
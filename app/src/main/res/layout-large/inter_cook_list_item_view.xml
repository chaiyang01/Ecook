<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >
<ImageView
    android:id="@+id/internet_cook_list_view_item_image"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:src="@mipmap/ic_launcher"
    android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/ll_layout_another_item"
        android:layout_marginTop="110dp"
        android:paddingTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#66363636"
        android:visibility="gone">
        <View
            android:layout_width="8dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="#ffffff"
            />
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_main_recipe"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="38sp"
                android:textColor="#ffffff"
                android:text="hahaha"
                />
            <TextView
                android:id="@+id/text_main_totalnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jjjj"
                android:textColor="#ffffff"/>

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/video_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/home_recipe_play"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_marginTop="160dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/linearLayout2">

    </LinearLayout>
<TextView
    android:id="@+id/cook_name_title"
    android:layout_marginTop="65dp"
    android:layout_width="200dp"
    android:textSize="35sp"
    android:singleLine="true"
    android:textColor="#000000"
    android:layout_height="wrap_content"
    android:text="haha"
    android:layout_below="@+id/internet_cook_list_view_item_image"
    android:layout_alignLeft="@+id/people_likes"
    android:layout_alignStart="@+id/people_likes" />
<TextView
    android:id="@+id/cook_info"
    android:layout_below="@id/cook_name_title"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_width="250dp"
    android:textSize="28sp"
    android:layout_height="wrap_content"
    android:maxLines="2"
    android:ellipsize="end"
    android:text="jjjjjjjjjjj"/>
    
<TextView
    android:id="@+id/people_likes"
    android:layout_below="@id/cook_info"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="hahaha"
    android:textSize="20sp"
    />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/author_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:layout_above="@+id/cook_info"
        android:layout_toLeftOf="@+id/linearLayout2"
        android:layout_toStartOf="@+id/linearLayout2"
        android:layout_marginBottom="51dp" />

    <TextView
android:id="@+id/author_name_tv"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:singleLine="true"
android:text="小芳"
android:textSize="35sp"
android:gravity="center"
        android:layout_above="@+id/cook_info"
        android:layout_alignRight="@+id/author_image_view"
        android:layout_alignEnd="@+id/author_image_view" />
</RelativeLayout>
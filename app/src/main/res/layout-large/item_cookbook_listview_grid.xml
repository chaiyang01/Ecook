<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cookbook_eight"
        android:background="@color/lucency" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_bg_yellow"
            android:layout_width="@dimen/cookbook_five"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/cookbook_ten"
            android:layout_marginTop="@dimen/cookbook_ten"
            android:background="@color/yellow" />

        <TextView
            android:id="@+id/tv_cookbook_classfig"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/cookbook_five"
            android:layout_marginTop="@dimen/cookbook_ten"
            android:layout_toRightOf="@id/tv_bg_yellow"
            android:textSize="25sp" />
    </RelativeLayout>

    <com.cool.ecook.view.MyGridView
        android:id="@+id/gv_cookbook_list_item"
        style="@style/all_width_height_match"
        android:numColumns="4" />

</LinearLayout>